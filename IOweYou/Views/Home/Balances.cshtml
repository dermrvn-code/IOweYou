@model List<IGrouping<User, IOweYou.Models.Transactions.Balance>>
@{
    ViewBag.Title = "Balances";
}
<h1 class="text-center">Balances</h1>

<div class="container mt-4">

    @if (@Model.Count > 0)
    {
        <div class="card mb-3 shadow-sm px-4">

            @foreach (var group in @Model)
            {
                @await Html.PartialAsync("Partials/_Balance", group)
            }

        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            You have no outstanding Balances
        </div>
    }
</div>

<script>
    $('.cstm-hr:last').hide();
</script>
