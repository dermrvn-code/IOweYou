@model IOweYou.ViewModels.Account.ChangeEmailViewModel
@{
    ViewBag.Title = "Change Email";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h3 class="text-center">Change Email</h3>
                <form method="post">
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="text" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }
                    <button type="submit" class="btn btn-primary w-100">Change Email</button>
                </form>
                <div class="text-center mt-3">
                    <a href="/account">Go back to Account</a>
                </div>
            </div>
        </div>
    </div>
</div>