@model List<IOweYou.Models.Transactions.Transaction>
@{
    var username = @ViewBag.Partner.Username;
    ViewBag.Title = "Transactions with "+username;
}

<h1 class="text-center">Transactions with <a href="/user/@username" class="text-primary">@username</a></h1>

<div class="container mt-4">
    @if (@Model.Count > 0)
    {
        @foreach (var transaction in @Model)
        {
            @await Html.PartialAsync("_Transaction", @transaction)
        }
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No transactions available.
        </div>
    }
</div>
