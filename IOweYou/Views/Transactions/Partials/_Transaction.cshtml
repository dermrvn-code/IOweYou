@model IOweYou.Models.Transactions.Transaction

<div class="card mb-3 shadow-sm px-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="text-primary" style="margin: 0">@Model.User.Username</h3>
            </div>
            <div class="text-center">
                <h4>@Model.Amount @Model.Currency.Name</h4>
                @if (Model.Received)
                {
                    <span class="arrow left"></span>
                }
                else
                {
                    <span class="arrow right"></span>
                }
                <p class="text-center" style="margin: 0; font-style: italic">@Model.Date.ToString("ddd, dd.MM.yyyy")</p>
            </div>
            <div class="text-end">
                <h3 class="text-primary" style="margin: 0"><a href="/user/@Model.Partner.Username">@Model.Partner.Username</a></h3>
            </div>
        </div>
    </div>
</div>

<style>
    .arrow{
        height: 20px;
    }

    .arrow::before, .arrow::after{
        content: "";
        display: inline-block;
        vertical-align: middle;
        margin: 0;
        width: 0;
        height: 0;
    }

    .arrow.left::before{
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        border-right: 45px solid darkgray;
    }
    .arrow.left::after{
        width: 300px;
        height: 4px;
        background: darkgray;
    }

    .arrow.right::before{
        width: 300px;
        height: 4px;
        background: darkgray;
    }
    .arrow.right::after{
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        border-left: 45px solid darkgray;
    }
</style>